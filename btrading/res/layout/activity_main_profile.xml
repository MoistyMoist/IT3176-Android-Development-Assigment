<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d3d3d3"
    android:orientation="vertical"
    tools:context=".ProfileActivity" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="176dp"
        android:background="#7483c9"
         android:padding="10px" >

        <TextView
            android:id="@+id/tvNickName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView1"
            android:layout_centerHorizontal="true"
            android:text="Tan Ah Kow" />
        
           <Button
               android:id="@+id/btnEditProfile"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentBottom="true"
               android:layout_alignParentRight="true"
               android:text="edit profile"
               android:textSize="10sp" />

           <ImageView
               android:id="@+id/imageView1"
               android:layout_width="160dp"
               android:layout_height="120dp"
               android:layout_centerVertical="true"
               android:layout_marginRight="14dp"
               android:layout_toLeftOf="@+id/btnEditProfile"
               android:src="@drawable/shape" />
        
    </RelativeLayout>

    <LinearLayout
        android:layout_width="302dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.31"
        android:background="#e9e9e9"
        android:orientation="vertical"
        android:padding="10px" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username" />

        <EditText
            android:id="@+id/etUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@null"
            android:enabled="false"
            android:text="Tan 123"
            android:paddingBottom="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email Address :" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@null"
            android:enabled="false"
            android:inputType="text|textEmailAddress"
            android:paddingBottom="10dp"
            android:text="Tan@email.com" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender :" />

        <EditText
            android:id="@+id/etSex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@null"
            android:enabled="false"
            android:text="Male" 
             android:paddingBottom="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date of Birth" />

        <EditText
            android:id="@+id/etDob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@null"
            android:enabled="false"
            android:text="27/11/2013"
             android:paddingBottom="10dp"  />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact :" />

        <EditText
            android:id="@+id/etContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@null"
            android:enabled="false"
            android:text="68920503"
             android:paddingBottom="10dp"  />
    </LinearLayout>
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
     
         <Button
             android:id="@+id/btnViewTransactions"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerHorizontal="true"
             android:text="view past transaction"
             android:textSize="20sp" />
"
        
    </RelativeLayout>

</LinearLayout>