<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="vertical"
    tools:context=".ProductDetailActivity" >

     <LinearLayout
        android:id="@+id/product_map"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:layout_height="140dp"/>
     
     <com.btrading.utils.LoaderImageView
        android:id="@+id/productImage"
        android:layout_gravity="left"
        android:layout_width="120dp"
        android:layout_marginTop="65dp"
        android:layout_marginLeft="5dp"
        android:layout_height="120dp"
        android:background="@drawable/shape"/>
     
	<Button 
            android:id="@+id/requestButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
          
            android:layout_above="@+id/scrollView"
            android:layout_toRightOf="@+id/productImage"
            android:text="Send Trade Request"
            android:layout_alignBottom="@+id/productImage"/>
	
	
	  
	<ScrollView 
	    android:id="@+id/scrollView"
	    android:layout_below="@+id/productImage"
	    android:layout_width="fill_parent"
	    android:layout_marginTop="10dp"
	    android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
    	android:paddingLeft="@dimen/activity_vertical_margin"
		android:paddingRight="@dimen/activity_horizontal_margin"
	    android:layout_height="fill_parent"
	    android:background="#ffffff">"
    <LinearLayout
        android:id="@+id/productLayout"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        
		android:background="#ffffff">
		
    	
        <TextView
            android:id="@+id/productName"
            android:layout_height="wrap_content"
        	android:layout_width="fill_parent"
        	android:textSize="30sp"
            android:text="zzzz"
        	android:maxLines="1"
        	android:textStyle="bold"
        	android:textColor="#0033cc"
            android:paddingBottom="@dimen/activity_vertical_margin"
        	android:paddingTop="@dimen/activity_vertical_margin"
            android:focusable="false"/>"
         <TextView 
       	 	android:id="@+id/tv"
       	 	android:textSize="20sp"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="Description : "/>
    
	     <TextView
	        android:id="@+id/productDescription"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:ellipsize="marquee"
	        android:maxLines="4"
	        android:textSize="17sp"
	        android:text="Description"
	        android:textColor="#cccccc" />
        
	     <TextView
		     android:id="@+id/tvQuality"
		     android:textSize="20sp"
		     android:gravity="left"
		     android:layout_width="wrap_content"
		     android:layout_height="wrap_content"
		     android:text="Product Quality : "
		     android:layout_marginTop="15dp"/>
		        
		  <TextView
		     android:id="@+id/productQuality"
		     android:gravity="bottom"
		     android:layout_width="wrap_content"
		     android:layout_height="wrap_content"
		     android:text="100"
		     android:ellipsize="marquee"
		     android:textSize="17sp"
		     android:focusable="false"
		     android:textColor="#cccccc"/>
        	
            <RelativeLayout 
            	android:layout_width="fill_parent"
            	android:layout_height="wrap_content">
            	
		        <TextView
		            android:id="@+id/tvQty"
		            android:textSize="24sp"
		            android:gravity="left"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="Qty : "
		            android:layout_marginTop="15dp"/>
		        
		        <TextView
		            android:id="@+id/productQty"
		            android:gravity="bottom"
		            android:layout_toRightOf="@+id/tvQty"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		      		android:text="100"
		      		android:textSize="24sp"
		      		android:focusable="false"
		      		android:layout_marginTop="15dp"
		      		android:textColor="#cc0000"/>
        	</RelativeLayout>
        	
        
   
    </LinearLayout>
</ScrollView>
</RelativeLayout>

